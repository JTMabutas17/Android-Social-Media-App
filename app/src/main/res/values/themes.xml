<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HunnyDates" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_200</item>
        <item name="colorPrimaryVariant">@color/light_blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->

        <!--    Added to remove the animation after Google Sign In    -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!--Custom Styles Written by HunnyDates Developers-->
    <style name="BottomNavBar">
        <item name="backgroundColor">@color/light_blue_200</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>